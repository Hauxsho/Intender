<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Signup">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:fontFamily="monospace"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold">

    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linlaybox"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center">


        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:fontFamily="@font/gandhi"
            android:text="Intender"
            android:textColor="#FFFFFF"
            android:textSize="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.312" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linlaybox"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/supEmail"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:fontFamily="@font/gandhi"
            android:hint="Email"
            android:textColorHint="#FFFFFF"></EditText>

        <EditText
            android:id="@+id/supPass"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:fontFamily="@font/gandhi"
            android:hint="Password : (AtLeast 6 digits)"
            android:inputType="textPassword"
            android:textColorHint="#FFFFFF">

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linlaybox"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="150dp"
        android:gravity="center">

        <Button
            android:id="@+id/Scont1"
            android:layout_width="218dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/loginll"
            android:background="@drawable/custom_button"
            android:elevation="8dp"
            android:fontFamily="@font/gandhi"
            android:shadowColor="@color/colorPrimaryDark"
            android:text="Continue"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:ignore="InvalidId"
            tools:visibility="visible"></Button>
    </LinearLayout>


</RelativeLayout>